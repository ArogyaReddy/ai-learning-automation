# AI Learning System Environment Configuration
# Copy this file to .env and fill in your details

# OpenRouter AI API Configuration (Free tier available)
# Get your free API key from https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Email Configuration for Notifications
# Use a free Gmail account and generate an app password
EMAIL_USER=your_email@gmail.com
EMAIL_APP_PASSWORD=your_16_character_app_password

# Notification Settings
NOTIFICATION_EMAIL=your_email@gmail.com  # Where to send learning notifications
LEARNING_TIMEZONE=America/New_York       # Your timezone for scheduling

# AI Learning Preferences
LEARNING_LEVEL=intermediate              # beginner, intermediate, advanced, expert
FOCUS_AREAS=playwright,cucumber,api      # Comma-separated focus areas
PREFERRED_LANGUAGE=javascript            # javascript, typescript, python

# System Configuration
DEBUG_MODE=false                         # Set to true for detailed logging
AUTO_GENERATE=true                       # Auto-generate content on schedule
SAVE_BACKUPS=true                        # Keep backup copies of lessons